<!--Hero Image-->

<div>
    <br>
    <div class="container">
        <h1 class="tableText">LEADERBOARD</h1>
        <br>
        <table class="table">
            <thead class="tableText">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Score</th>
                </tr>
            </thead>
            <tbody class="tableTitle">
                {{#each players}}
                <tr>
                    <td>{{players.order}}</td>
                    <td>{{players.name}}</td>
                    <td>${{players.balance}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
